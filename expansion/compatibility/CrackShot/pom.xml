<project>
    <modelVersion>4.0.0</modelVersion>
    <packaging>jar</packaging>

    <parent>
        <groupId>com.github.sirblobman.combatlogx.expansion.compatibility</groupId>
        <artifactId>compatibility-parent</artifactId>
        <version>11.0.0.0-SNAPSHOT</version>
        <relativePath>../pom.xml</relativePath>
    </parent>

    <artifactId>CrackShot</artifactId>
    <name>Compatibility Expansion: CrackShot</name>
    <description>An expansion for CombatLogX that adds compatibility with the CrackShot plugin.</description>

    <repositories>
        <!-- SirBlobman Private -->
        <repository>
            <id>sirblobman-private</id>
            <url>https://nexus.sirblobman.xyz/repository/private/</url>
        </repository>
    </repositories>

    <dependencies>
        <!-- CrackShot -->
        <dependency>
            <groupId>com.shampaggon</groupId>
            <artifactId>crackshot</artifactId>
            <version>0.98.11</version>
            <scope>provided</scope>
        </dependency>
    </dependencies>

    <build>
        <finalName>CrackShot Compatibility</finalName>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-install-plugin</artifactId>
                <version>2.4</version>
                <executions>
                    <execution>
                        <id>install-external-non-maven2-jar</id>
                        <phase>initialize</phase>
                        <configuration>
                            <repositoryLayout>default</repositoryLayout>
                            <groupId>com.shampaggon</groupId>
                            <artifactId>crackshot</artifactId>
                            <version>0.98.11</version>
                            <file>${project.basedir}/lib/Crackshot.jar</file>
                            <packaging>jar</packaging>
                            <generatePom>true</generatePom>
                        </configuration>
                        <goals>
                            <goal>install-file</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>
